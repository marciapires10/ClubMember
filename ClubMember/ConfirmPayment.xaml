<Window x:Class="ClubMember.ConfirmPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClubMember"
        mc:Ignorable="d"
        Title="ConfirmPayment" Height="330
        " Width="375">
    <Grid>
        <Label x:Name="PaymentText" Style="{StaticResource WhiteBoldLabelStyle}" Content="The payment was accepted successfully" Margin="0,35,0,0" VerticalAlignment="Top" Height="68" Width="316" FontSize="16"/>
        <Image HorizontalAlignment="Left" Height="76" Margin="150,0,0,0" VerticalAlignment="Center" Width="80" Source="Images/football-png-7.png"/>
        <Button Content="OK" HorizontalAlignment="Center" Margin="0,245,0,0" VerticalAlignment="Top" Width="376" Height="41" Background="White" FontWeight="Bold" FontSize="16" Click="Button_Click"/>
    </Grid>
</Window>
