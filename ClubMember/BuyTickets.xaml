<Page x:Class="ClubMember.BuyTickets"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClubMember"
      mc:Ignorable="d" 
      Style="{StaticResource PageStyle}"
      Title="BuyTickets">

    <Grid>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="75,62,0,0" Text="Choose the game: " TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <Calendar x:Name="GameCalendar" HorizontalAlignment="Left" Margin="75,91,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.526,0.537" Height="174" FirstDayOfWeek="Sunday" IsTodayHighlighted="False">
            <Calendar.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA3AEB9"/>
                    <GradientStop Color="#FF8399A9" Offset="0.375"/>
                    <GradientStop Color="#FF718597" Offset="0.375"/>
                    <GradientStop Color="#FF179CFF" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.BorderBrush>
            <Calendar.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE4EAF0"/>
                    <GradientStop Color="#FFECF0F4" Offset="0.16"/>
                    <GradientStop Color="#FFFCFCFD" Offset="0.16"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Calendar.Background>
        </Calendar>
        <Rectangle HorizontalAlignment="Left" Height="20" Margin="154,221,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="20
                   " Fill="#66F4FF00" IsHitTestVisible="False"/>
        <Rectangle HorizontalAlignment="Left" Height="20" Margin="196,238,0,0" Stroke="#00000000" VerticalAlignment="Top" Width="20                    " Fill="#66F4FF00" IsHitTestVisible="False"/>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="289,127,0,0" Text="MyClub x UFC" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="8" FontWeight="Normal" Width="67"/>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="263,127,0,0" Text="27/05:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="8" FontWeight="Bold" Width="67"/>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="289,145,0,0" Text="SALALA x MyClub" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="8" FontWeight="Normal" Width="67"/>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="263,145,0,0" Text="05/06" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="8" FontWeight="Bold" Width="67"/>
        <TextBlock Style="{StaticResource TextBoldStyle}" HorizontalAlignment="Left" Margin="80,322,0,0" Text="Quantity of tickets:" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <Button x:Name="PlusSignal" Content="+" Style="{StaticResource SignalBoldButtonStyle}" Margin="180,355,165,0" FontSize="22" Click="Increase_Tickets" RenderTransformOrigin="0.511,0.549" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="28" Background="White"/>
        <Button x:Name="MinusSignal" Content="-" Style="{StaticResource SignalBoldButtonStyle}" Margin="120,355,227,0" FontSize="22" Click="Decrease_Tickets" RenderTransformOrigin="0.511,0.549" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="28" Background="White"/>
        <Label x:Name="QuantityTickets" Content="1" Style="{StaticResource WhiteBoldLabelStyle}" Margin="148,356,0,0" VerticalAlignment="Top" Width="32" HorizontalContentAlignment="Center" Foreground="White" FontWeight="Normal" Height="28" HorizontalAlignment="Left" Background="Transparent"/>
        <Button x:Name="Renew" Style="{StaticResource BlueBoldButtonStyle}" Content="Choose Tickets" Margin="81,427,0,0" VerticalAlignment="Top" Width="173" Height="40" Foreground="White" Click="Choose_Tickets" HorizontalAlignment="Left"/>
    </Grid>
</Page>
