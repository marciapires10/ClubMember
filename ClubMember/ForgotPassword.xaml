<Page x:Class="ClubMember.ForgotPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClubMember"
      mc:Ignorable="d" 
      Style="{StaticResource PageStyle}"
      Title="ForgotPassword">

    <Grid>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" Margin="0,321,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" BorderBrush="{x:Null}" FontFamily="Yu Gothic Light" TextChanged="textBox1_TextChanged"/>
        <Label Content="Favourite movie:" HorizontalAlignment="Left" Margin="72,282,0,0" VerticalAlignment="Top" Foreground="White" FontSize="18"/>
        <Label Content="FORGOT PASSWORD" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20" RenderTransformOrigin="0.507,0.301"/>
        <Label Content="Recovery question" HorizontalAlignment="Center" Margin="0,195,0,0" VerticalAlignment="Top" Foreground="White" FontSize="20"/>
        <Button Style="{StaticResource BlueButtonStyle}" Content="GET PASSWORD" Margin="0,397,0,0" VerticalAlignment="Top" Height="40" Width="147"/>

    </Grid>
</Page>
